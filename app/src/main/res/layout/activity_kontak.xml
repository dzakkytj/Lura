<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingTop="35dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:background="@drawable/bg2"
    tools:context=".Kontak">

    <ImageButton
        android:id="@+id/ImageIG"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/instagram"
        android:background="@drawable/btn_ab"/>

    <ImageButton
        android:id="@+id/ImageFB"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/ImageIG"
        android:src="@drawable/facebook"
        android:background="@drawable/btn_ab"/>

    <ImageButton
        android:id="@+id/ImageWA"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginBottom="90dp"
        android:layout_below="@id/ImageFB"
        android:src="@drawable/whatsapp"
        android:background="@drawable/btn_ab"/>

    <Button
        android:id="@+id/Aboutt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ImageWA"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Copyright Â© 2018 Dzakky Trisna Junaidi"
        android:textColor="@color/colorPutih"
        android:textStyle="bold"
        android:background="@null"/>


</RelativeLayout>